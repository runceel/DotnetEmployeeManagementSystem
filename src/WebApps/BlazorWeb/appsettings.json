{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Mcp": {
    "ConnectionTimeoutMs": 5000,
    "ToolExecutionTimeoutMs": 30000,
    "Servers": [
      {
        "Name": "EmployeeService",
        "DisplayName": "従業員サービス",
        "EndpointUrl": "http://employeeservice-api/api/mcp",
        "Description": "従業員と部署の管理機能を提供します",
        "Icon": "mdi-account-group"
      },
      {
        "Name": "AuthService",
        "DisplayName": "認証サービス",
        "EndpointUrl": "http://authservice-api/api/mcp",
        "Description": "ユーザーとロールの認証・認可機能を提供します",
        "Icon": "mdi-shield-account"
      },
      {
        "Name": "NotificationService",
        "DisplayName": "通知サービス",
        "EndpointUrl": "http://notificationservice-api/api/mcp",
        "Description": "システム通知の管理機能を提供します",
        "Icon": "mdi-bell"
      },
      {
        "Name": "AttendanceService",
        "DisplayName": "勤怠サービス",
        "EndpointUrl": "http://attendanceservice-api/api/mcp",
        "Description": "勤怠記録と休暇申請の管理機能を提供します",
        "Icon": "mdi-clock-outline"
      }
    ]
  }
}
