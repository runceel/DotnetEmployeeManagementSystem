@using Shared.Contracts.EmployeeService
@using Shared.Contracts.DepartmentService
@using BlazorWeb.Services
@inject IDepartmentApiClient DepartmentApiClient
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudTextField @bind-Value="_model.FirstName" 
                          Label="名" 
                          Required="true" 
                          RequiredError="名を入力してください。"
                          Variant="Variant.Outlined"
                          Class="mb-3" />
            
            <MudTextField @bind-Value="_model.LastName" 
                          Label="姓" 
                          Required="true" 
                          RequiredError="姓を入力してください。"
                          Variant="Variant.Outlined"
                          Class="mb-3" />
            
            <MudTextField @bind-Value="_model.Email" 
                          Label="メールアドレス" 
                          Required="true" 
                          RequiredError="メールアドレスを入力してください。"
                          InputType="InputType.Email"
                          Variant="Variant.Outlined"
                          Class="mb-3" />
            
            <MudSelect @bind-Value="_model.Department" 
                       Label="部署" 
                       Required="true" 
                       RequiredError="部署を選択してください。"
                       Variant="Variant.Outlined"
                       Class="mb-3">
                @if (_departments is not null)
                {
                    @foreach (var dept in _departments)
                    {
                        <MudSelectItem Value="@dept.Name">@dept.Name</MudSelectItem>
                    }
                }
            </MudSelect>
            
            <MudTextField @bind-Value="_model.Position" 
                          Label="役職" 
                          Required="true" 
                          RequiredError="役職を入力してください。"
                          Variant="Variant.Outlined"
                          Class="mb-3" />
            
            <MudDatePicker @bind-Date="_hireDate" 
                           Label="入社日" 
                           Required="true" 
                           RequiredError="入社日を入力してください。"
                           Variant="Variant.Outlined"
                           Class="mb-3" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OnCancel">キャンセル</MudButton>
        <MudButton Color="Color.Primary" OnClick="OnSubmit" Disabled="!_isValid">保存</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string Title { get; set; } = "従業員情報";

    [Parameter]
    public EmployeeFormModel Model { get; set; } = new();

    private MudForm _form = null!;
    private bool _isValid;
    private EmployeeFormModel _model = new();
    private DateTime? _hireDate;
    private IEnumerable<DepartmentDto>? _departments;

    protected override async Task OnInitializedAsync()
    {
        _model = new EmployeeFormModel
        {
            FirstName = Model.FirstName,
            LastName = Model.LastName,
            Email = Model.Email,
            Department = Model.Department,
            Position = Model.Position,
            HireDate = Model.HireDate
        };
        _hireDate = _model.HireDate;

        await LoadDepartments();
    }

    private async Task LoadDepartments()
    {
        try
        {
            _departments = await DepartmentApiClient.GetAllDepartmentsAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"部署一覧の取得に失敗しました: {ex.Message}", Severity.Error);
            _departments = Enumerable.Empty<DepartmentDto>();
        }
    }

    private void OnSubmit()
    {
        if (_hireDate.HasValue)
        {
            _model.HireDate = _hireDate.Value;
        }
        MudDialog?.Close(DialogResult.Ok(_model));
    }

    private void OnCancel()
    {
        MudDialog?.Cancel();
    }
}
